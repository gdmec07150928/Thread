<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.example.lky.thread.MainActivity">
   <Button
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="ANR(Application Not Responsing)"
       android:onClick="anr"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="thread类实现多线程"
        android:onClick="threadclass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Runadle接口实现多线程"
        android:onClick="runnableinterface"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time TimeTask实现多线程"
        android:onClick="timetask"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler消息处理器"
        android:onClick="handlermessage"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AsyncTask实现异步操作"
        android:onClick="asynctask"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"/>
</LinearLayout>
